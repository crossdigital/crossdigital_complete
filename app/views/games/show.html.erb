<%= turbo_stream_from @game %>
<style>
  .grid-container{
    display:grid;
    gap:25px;
    grid-template-columns:auto auto auto auto auto;
    background-color: #F5F5DC;
    padding: 10px;
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
  }
  button{
    width: 100%;
  }
  .grid-item{
    text-align:center;
  }
  .selected{
    width:100%;
    height:100%;
    vertical-align: middle;
    opacity: 0.6;
  }
  .red{
    background-color: #FF0000;
  }
  .blue{
    background-color: #33CCFF;
  }
  .black{
    background-color: #330000;
    color: white;
  }
  .white{
    background-color: #FFFFFF;
  }
<% if @participant&.role == "operative" %>
  .opp-red{
    background-color: #FF0000;
  }
  .opp-blue{
    background-color: #33CCFF;
  }
  .opp-black{
    background-color: #330000;
    color: white;
  }
  .opp-white{
    background-color: #FFFFFF;
  }
<% end %>
  .flexy {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
    align-items: end;
  }
</style>
<%= link_to 'Back to Games', games_path %>

<table>
  <thead>
    <tr>
      <th>Game Name</th>
      <th>Game State</th>
      <th>Playing as</th>
      <th>Team</th>
      <th>Role</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @game.name %></td>
      <td><%= @game.state %></td>
      <td><%= @participant&.name %></td>
      <td><%= @participant&.team %></td>
      <td><%= @participant&.role %></td>
    </tr>
  </tbody>
</table>

<% unless @participant.present? %><%= link_to 'Join Game', new_game_participant_path(@game), target: :_top %><% end %>

<%= render @game %>
